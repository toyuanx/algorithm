class Solution {

    /**
     * @param Integer $x
     * @return Integer
     */
    function mySqrt($x) {
        $start = 0;
        $end = ($x / 2) + 1;
        while($start <= $end) {
            $mid = round(($start + $end) / 2);
            $sq = $mid * $mid;
            if( $sq == $x) {
                return $mid;
            } else if( $sq > $x) {
                $end = $mid - 1;
            } else {
                $start = $mid + 1;
            }
        }

        return $end;
    }
}
